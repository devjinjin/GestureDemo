<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_tool_pen_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llEraseTools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="14dp" >

            <ImageButton
                android:id="@+id/ibNormalPen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/pen_action_pen_selector" />

            <ImageButton
                android:id="@+id/ibBrush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/pen_action_brush_selector" />

            <ImageButton
                android:id="@+id/ibPencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/pen_action_pencil_selector" />

            <ImageButton
                android:id="@+id/ibHighLighter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/pen_action_highlighter_selector" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/sbPenSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="80"
            android:progress="25" >
        </SeekBar>
    </LinearLayout>

</RelativeLayout>