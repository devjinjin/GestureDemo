<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_tool_color_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/llColorTools1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibRedColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_red_selector" />

            <ImageButton
                android:id="@+id/ibOrangeColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_orange_selector" />

            <ImageButton
                android:id="@+id/ibYellowColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_yellow_selector" />

            <ImageButton
                android:id="@+id/ibGreenColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_green_selector" />

            <ImageButton
                android:id="@+id/ibBlueColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_blue_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llColorTools2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/ibNavyColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_navy_selector" />

            <ImageButton
                android:id="@+id/ibPurpleColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_purple_selector" />

            <ImageButton
                android:id="@+id/ibBlackColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_black_selector" />

            <ImageButton
                android:id="@+id/ibWhiteColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_white_selector" />

            <ImageButton
                android:id="@+id/ibPickerColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@drawable/color_action_picker_selector" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flAddLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/llContent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:visibility="gone"
        android:layout_marginTop="-7dp"
        android:background="@drawable/img_tool_sub_color_bg" >
    </FrameLayout>

</RelativeLayout>